---
export interface Props {
  title: string;
  subtitle?: string;
  imageSrc?: string;
  imageAlt?: string;
  heightClass?: string;
  overlayClass?: string;
}

const {
  title,
  subtitle,
  imageSrc = '/src/assets/images/hero-image.png',
  imageAlt = '',
  heightClass = 'h-[40vh] md:h-[50vh]',
  overlayClass = 'from-slate-900 to-slate-700',
} = Astro.props as Props;
---

<section class={`relative ${heightClass} w-full overflow-hidden`}>
  <div class={`absolute inset-0 bg-gradient-to-b ${overlayClass}`}></div>
  {imageSrc && (
    <img src={imageSrc} alt={imageAlt} class="absolute inset-0 h-full w-full object-cover opacity-30" />
  )}
  <div class="relative z-10 mx-auto max-w-6xl px-6 h-full flex items-center">
    <div class="text-white">
      <h1 class="text-3xl md:text-5xl font-extrabold leading-tight mb-4">{title}</h1>
      {subtitle && <p class="text-sm md:text-base text-gray-100">{subtitle}</p>}
    </div>
  </div>
</section>


