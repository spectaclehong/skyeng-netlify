---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Hero3 from '~/components/widgets/Hero3.astro';
import SideNav from '~/components/widgets/SideNav.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: '인증자료 | 하늘엔지니어링',
  description: '하늘엔지니어링이 보유한 각종 인증서 및 자격증을 확인하실 수 있습니다.',
};
---

<Layout metadata={metadata}>
  <Hero3 title="인증자료 (Certifications)" subtitle="공식 인증서 및 자격 현황" imageSrc="~/assets/images/pr/certifications/hero.png" imageAlt="Certifications" />
  <SideNav />

  <section class="mx-auto max-w-6xl px-6 py-16 md:py-20">
    <h2 class="text-2xl font-bold mb-6">보유 인증</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {[
        'ISO 9001:2015',
        'ISO 14001:2015',
        'ISO 45001:2018',
        'ISO 3834-2:2021',
        'Certificate of Manufacture Registration of Cylinder',
        'Certificate of Corporate Research Institute',
        '기술혁신형 중소기업(INNO-BIZ) 확인서',
        '벤처기업 확인서 (Certificate of Venture Company)'
      ].map((name) => (
        <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden bg-white dark:bg-gray-900">
          <div class="aspect-[4/3] w-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center">
            <Image src="~/assets/images/default.png" alt={name} layout="responsive" aspectRatio="4/3" class="object-contain" />
          </div>
          <div class="p-3 border-t border-gray-200 dark:border-gray-800">
            <p class="text-sm font-medium">{name}</p>
          </div>
        </div>
      ))}
    </div>
    <p class="text-xs text-gray-500 dark:text-gray-400 mt-4">각 카드 클릭 시 라이트박스로 원본 인증서를 확대 표시하도록 추후 연동합니다.</p>
  </section>
</Layout>
