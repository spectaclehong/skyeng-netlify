---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Hero3 from '~/components/widgets/Hero3.astro';
import SideNav from '~/components/widgets/SideNav.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: '반도체 관련사업 | 하늘엔지니어링',
  description: 'TMAH Roll Brush Cleaner, Dip Process, AVG 반송시스템 등 반도체 제조 장비 전문업체입니다.',
};
---

<Layout metadata={metadata}>
  <Hero3 title="반도체 관련사업 (Semiconductor)" subtitle="TMAH Roll Brush Cleaner · Dip Process · AVG/OHT · EFEM · Wet Station" imageSrc="/src/assets/images/business/semiconductor/hero.png" imageAlt="Semiconductor Projects" />
  <SideNav items={[
    { href: '/business/fusion', label: '핵융합 사업' },
    { href: '/business/accelerator', label: '가속기 사업' },
    { href: '/business/aerospace', label: '우주항공 사업' },
    { href: '/business/defense', label: '국방과학 사업' },
    { href: '/business/battery', label: '2차전지 관련 사업' },
    { href: '/business/semiconductor', label: '반도체 관련 사업' },
  ]} />

  <section class="mx-auto max-w-6xl px-6 py-16 md:py-20">
    <h2 class="text-2xl font-bold mb-6">프로젝트 포트폴리오</h2>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden">
        <img src="/src/assets/images/default.png" alt="TMAH Roll Brush Cleaner" class="w-full h-44 object-cover" />
        <div class="p-4">
          <h3 class="text-sm font-semibold">1. TMAH Roll Brush Cleaner (설계/전장/제어/조립)</h3>
        </div>
      </div>
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden">
        <img src="/src/assets/images/default.png" alt="Dip Process Develop" class="w-full h-44 object-cover" />
        <div class="p-4">
          <h3 class="text-sm font-semibold">2. Dip Process Develop (설계/전장/제어/조립)</h3>
        </div>
      </div>
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden">
        <img src="/src/assets/images/default.png" alt="AVG 반송 System" class="w-full h-44 object-cover" />
        <div class="p-4">
          <h3 class="text-sm font-semibold">3. AVG 반송 System (설계/전장/제어/조립)</h3>
        </div>
      </div>
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden">
        <img src="/src/assets/images/default.png" alt="OHT & Rail" class="w-full h-44 object-cover" />
        <div class="p-4">
          <h3 class="text-sm font-semibold">4. OHT & Rail (설계/제작/티칭)</h3>
        </div>
      </div>
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden">
        <img src="/src/assets/images/default.png" alt="반도체 EFEM" class="w-full h-44 object-cover" />
        <div class="p-4">
          <h3 class="text-sm font-semibold">5. 반도체 EFEM (제작/전장/조립)</h3>
        </div>
      </div>
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 overflow-hidden">
        <img src="/src/assets/images/default.png" alt="Wet Station" class="w-full h-44 object-cover" />
        <div class="p-4">
          <h3 class="text-sm font-semibold">6. Wet Station (제작/전장/조립)</h3>
        </div>
      </div>
    </div>
  </section>
</Layout>
