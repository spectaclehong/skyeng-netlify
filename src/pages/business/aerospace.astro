---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Hero3 from '~/components/widgets/Hero3.astro';
import Content from '~/components/widgets/Content.astro';
import SideNav from '~/components/widgets/SideNav.astro';

const metadata = {
  title: '우주항공사업 | 하늘엔지니어링',
  description: 'TLV 및 KSLV-II 프로젝트의 상세설계 및 3D 모델링, 지상설비 제작·설치 전문업체입니다.',
};
---

<Layout metadata={metadata}>
  <Hero3 title="우주항공 사업" subtitle="KSLV-II · TLV 상세설계 및 3D 모델링" imageSrc="/src/assets/images/business/aerospace/hero.png" imageAlt="Aerospace Projects" />
  <SideNav items={[
    { href: '/business/fusion', label: '핵융합 사업' },
    { href: '/business/accelerator', label: '가속기 사업' },
    { href: '/business/aerospace', label: '우주항공 사업' },
    { href: '/business/defense', label: '국방과학 사업' },
    { href: '/business/battery', label: '2차전지 관련 사업' },
    { href: '/business/semiconductor', label: '반도체 관련 사업' },
  ]} />

  <!-- 1) TLV & KSLV-II Detail Design & 3D Modeling -->
  <section class="mx-auto max-w-6xl px-6 py-16 md:py-20">
    <h2 class="text-2xl font-bold mb-6">1) TLV & KSLV-II Detail Design & 3D Modeling</h2>
    <div class="grid md:grid-cols-2 gap-8 items-start">
      <div>
        <h3 class="text-lg font-semibold mb-2">TLV</h3>
        <img src="/src/assets/images/default.png" alt="TLV 3D 모델" class="rounded-lg border border-gray-200 dark:border-gray-800" />
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-2">KSLV-II</h3>
        <img src="/src/assets/images/default.png" alt="KSLV-II 3D 모델" class="rounded-lg border border-gray-200 dark:border-gray-800" />
      </div>
    </div>
  </section>

  <!-- 2) Manufacturing of Vacuum Chamber for Korea Satellite Locket Test -->
  <section class="mx-auto max-w-6xl px-6 pb-24">
    <h2 class="text-2xl font-bold mb-4">2) Manufacturing of Vacuum Chamber for Korea Satellite Locket Test</h2>
    <div class="rounded-xl overflow-hidden border border-gray-200 dark:border-gray-800">
      <img src="/src/assets/images/default.png" alt="위성 로켓 테스트용 진공챔버" class="w-full h-72 md:h-[28rem] object-cover" />
    </div>
  </section>
</Layout>
