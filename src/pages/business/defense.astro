---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Hero3 from '~/components/widgets/Hero3.astro';
import Content from '~/components/widgets/Content.astro';
import SideNav from '~/components/widgets/SideNav.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: '국방과학사업 | 하늘엔지니어링',
  description: '한화 디퓨저 시스템 설계·제작·설치를 통한 국방과학 기술 분야 전문성을 보유하고 있습니다.',
};
---

<Layout metadata={metadata}>
  <Hero3 title="국방과학 사업" subtitle="한화 디퓨저 설계·제작·설치" imageSrc="~/assets/images/business/defense/hero.png" imageAlt="Defense Science Projects" />
  <SideNav items={[
    { href: '/business/fusion', label: '핵융합 사업' },
    { href: '/business/accelerator', label: '가속기 사업' },
    { href: '/business/aerospace', label: '우주항공 사업' },
    { href: '/business/defense', label: '국방과학 사업' },
    { href: '/business/battery', label: '2차전지 관련 사업' },
    { href: '/business/semiconductor', label: '반도체 관련 사업' },
  ]} />

  <!-- Project: 한화 디퓨저 설계, 제작 및 설치 / 국방과학연구소 -->
  <section class="mx-auto max-w-6xl px-6 py-16 md:py-20">
    <h2 class="text-2xl font-bold mb-4">1) 한화 디퓨저 설계, 제작 및 설치 / 국방과학연구소</h2>
    <div class="grid md:grid-cols-3 gap-4">
      {Array.from({ length: 6 }).map((_, i) => (
        <div class="rounded-lg overflow-hidden border border-gray-200 dark:border-gray-800">
          <Image src="~/assets/images/default.png" alt={`한화 디퓨저 사진 ${i+1}`} layout="responsive" aspectRatio="16/9" class="object-cover" />
        </div>
      ))}
    </div>
  </section>
</Layout>
